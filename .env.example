# When adding additional environment variables, the schema in "/src/env.mjs"
# should be updated accordingly.

# Node.js
# https://nodejs.dev/en/learn/nodejs-the-difference-between-development-and-production/
NODE_ENV='development'

# Prisma
# https://www.prisma.io/docs/reference/database-reference/connection-urls#env
DATABASE_URL="postgresql://username:password123@0.0.0.0:5432/blog"

# Next Auth
# You can generate a new secret on the command line with:
# openssl rand -base64 32
# https://next-auth.js.org/configuration/options#secret
# NEXTAUTH_SECRET=""
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="1234567890987654321234567890"

# Next Auth GITHUB Provider
GITHUB_ID="<REDACTED>"
GITHUB_SECRET="<REDACTED>"

# PostgreSQL
ALLOW_EMPTY_PASSWORD='no'
POSTGRESQL_USERNAME='username'
POSTGRESQL_PASSWORD='password123'
POSTGRESQL_DATABASE='blog'